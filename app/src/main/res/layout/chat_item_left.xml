<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/chat_item_image"
        app:srcCompat="@drawable/ic_account_circle_blue_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chat_item_image"
        android:layout_marginLeft="5dp"
        android:id="@+id/chat_item_msg"
        android:textSize="18sp"
        android:text="hello"
        android:textColor="#fff"
        android:padding="8dp"
        android:background="@drawable/chat_left_background"></TextView>


</RelativeLayout>